<div class="row">
	<div class="col-md-12 oportunities-tittle">
		Cargue una oportunidad
	</div>
</div>
<div class="row" style="margin-bottom:50px;">
	<div class="oportunities-button">
		<%=link_to 'cargar oportunidad',load_oportunity_path,{class:'btn btn-default'}%>
	</div>
</div>
<hr>

<div class="row">
	<%= form_tag '/load_oportunity', multipart: true do %>
	<div class="col-md-1 col-lg-1 col-xs-1">
		<label for="file">XLS:</label>
	</div>
	<div class="col-md-5 col-lg-5 col-xs-5">
		<span class="btn btn-default">
			<%= file_field_tag "file" %>
		</span>
	</div>
	<div class="col-md-3 col-xs-3 col-lg-3">
		<%= submit_tag('Cargar',class:'btn btn-success') %>
	</div>
	<% end %>
</div>
