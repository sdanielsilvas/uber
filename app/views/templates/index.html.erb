
<div class="row">
	<div class="col-md-2">
		<%=link_to  'Crear plantilla', templates_new_path, class:"btn btn-primary"%>
	</div>
</div>
<%if @templates.empty?%>
<div class="row">
	no hay plantillas
</div>
<%else%>
<div class="row">
	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Description</th>
				<th></th>
				
			</tr>
		</thead>
		<tbody>
			<%@templates.each do |template|%>
			<tr>
				<td><%=template["codigo"]%></td>
				<td><%=template["nombre"]%></td>
				<td><%=template["descripcion"]%></td>
				<td><%=link_to  raw("VER"), show_template_path(1),class:"btn btn-primary"%></td>
			</tr>
			<%end%>				
		</tbody>
	</table>
</div>
<%end%>