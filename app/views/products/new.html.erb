 <%=form_tag('/product') do%>
 <div class="form-group col-md-12">
 	<label for="name">Name:</label>
 	<input type="text" class="form-control" id="name" name="product[name]">
 </div>
 <div class="form-group col-md-12">
 	<label for="email">Description:</label>
 	<textarea class="form-control" rows="5" id="description" name="product[description]"></textarea>
 </div>
 <select multiple="multiple" id="capabilities-select" name="capabilities[]" style="height: 500px;width: 500px;">
 	<%@capabilities.each do |capability,index|%>
 		<option value='<%=capability.id%>'><%=capability.name%></option>
 	<%end%>
 </select>
 <div class="col-md-1 col-md-offset-11">
 	<button type="submit" class="btn btn-default">Submit</button>
 </div>
 <%end%>
  <script type="text/javascript">
 	$( window ).on( "load", function() { $('#capabilities-select').multiSelect(); })
 </script>